<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="720.0" prefWidth="1280.0"
            xmlns="http://javafx.com/javafx/8" fx:controller="ui.controller.SplashUIController">
   <children>
      <Label layoutX="534.0" layoutY="156.0" text="Welcome" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Segoe UI Semibold" size="50.0"/>
         </font>
      </Label>
      <Text fill="WHITE" layoutX="559.0" layoutY="245.0" strokeType="OUTSIDE" strokeWidth="0.0"
            text="Please Sign In or Register">
         <font>
            <Font name="Segoe UI Semilight" size="15.0"/>
         </font>
      </Text>
      <VBox layoutX="539.0" layoutY="286.0">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0"
                  prefWidth="200.0">
               <children>
                  <FontAwesomeIconView glyphName="USER" glyphStyle=".fx-fill#999" size="1.3em">
                  </FontAwesomeIconView>
                  <TextField fx:id="txtUser" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                             minWidth="-Infinity" prefHeight="33.0" prefWidth="180.0" promptText="Username"
                             HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="3.0"/>
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity"
                  prefHeight="35.0" prefWidth="200.0">
               <children>
                  <FontAwesomeIconView glyphName="LOCK" glyphStyle=".fx-fill#999" size="1.3em">
                  </FontAwesomeIconView>
                  <PasswordField fx:id="txtPass" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                 minWidth="-Infinity" prefWidth="180.0" promptText="Password" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0"/>
                     </HBox.margin>
                  </PasswordField>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="3.0"/>
         </padding>
      </VBox>
      <VBox layoutX="539.0" layoutY="384.0">
         <children>
            <Button fx:id="btnSignIn" defaultButton="true" maxHeight="-Infinity" maxWidth="-Infinity"
                    minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#clickedSignOn"
                    prefHeight="35.0" prefWidth="200.0" text="Sign In" underline="true"/>
            <Button fx:id="btnRegister" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                    minWidth="-Infinity" mnemonicParsing="false" onAction="#tryRegister" prefHeight="35.0"
                    prefWidth="200.0" text="Register" underline="true">
               <VBox.margin>
                  <Insets top="5.0"/>
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
