<AnchorPane id="SplashViewPane" prefHeight="720.0" prefWidth="1280.0" styleClass="SplashView" stylesheets="@styleSheets/SeaTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.SplashUIController">
   <children>
      <Label layoutX="534.0" layoutY="156.0" styleClass="SplashView" text="Welcome">
         <font>
            <Font name="Segoe UI Semibold" size="50.0" />
         </font>
      </Label>
      <Text layoutX="559.0" layoutY="245.0" styleClass="SplashView" text="Please Sign In or Register">
         <font>
            <Font name="Segoe UI Semilight" size="15.0" />
         </font>
      </Text>
      <VBox layoutX="536.0" layoutY="290.0" styleClass="SplashView">
         <children>
            <HBox alignment="CENTER_LEFT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="200.0" styleClass="SplashView">
               <children>
                  <FontAwesomeIconView glyphName="USER" glyphStyle=".fx-fill#cbf3ff" size="1.3em">
                  </FontAwesomeIconView>
                  <TextField fx:id="txtUser" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="33.0" prefWidth="180.0" promptText="Username" styleClass="SplashView" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="3.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="200.0" styleClass="SplashView">
               <children>
                  <FontAwesomeIconView glyphName="LOCK" glyphStyle=".fx-fill#cbf3ff" size="1.3em">
                  </FontAwesomeIconView>
                  <PasswordField fx:id="txtPass" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="180.0" promptText="Password" styleClass="SplashView" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets left="5.0" />
                     </HBox.margin>
                  </PasswordField>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="3.0" />
         </padding>
      </VBox>
      <VBox layoutX="540.0" layoutY="384.0" styleClass="SplashView">
         <children>
            <Button fx:id="btnSignIn" defaultButton="true" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#clickedSignOn" prefHeight="35.0" prefWidth="200.0" styleClass="SplashView" text="Sign In" underline="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="btnRegister" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#tryRegister" prefHeight="35.0" prefWidth="200.0" styleClass="SplashView" text="Register" underline="true">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
      <FontAwesomeIconView glyphName="TIMES" layoutX="1242.0" layoutY="40.0" onMouseClicked="#closeApp" size="2.5em" styleClass="SplashView">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </FontAwesomeIconView>
   </children>
</AnchorPane>
